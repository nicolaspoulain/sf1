<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/united/bootstrap.min.css">
<title>{% block title %}symblog{% endblock %} - symblog</title>
<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
{% block stylesheets %}
{% endblock %}
<link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
<link href="{{ asset('css/screen.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('css/simple-sidebar.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('css/sticky-footer-navbar.css') }}" type="text/css" rel="stylesheet" />
</head>
<body>
<section id="wrapper">

  <div id="sidebar-wrapper">
    {% block sidebar %}
    Le contenu parent
    {% endblock %}
  </div>

  <div class="navbar navbar-default">
    <div class="navbar-header">
      <a class="navbar-brand" href="{{ path('Nico_BlogBundle_homepage') }}">Brand</a>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li><a href="{{ path('Nico_BlogBundle_homepage') }}">Home</a></li>
        <li><a href="{{ path('Nico_BlogBundle_about') }}">About</a></li>
        <li><a href="{{ path('Nico_BlogBundle_contact') }}">Contact</a></li>
      </ul>
      <form class="navbar-form navbar-right">
        <input class="form-control col-lg-8" placeholder="Search" type="text">
      </form>
    </div>
  </div>

  <div class="jumbotron">
    <h1>{% block blog_title %}<a href="{{ path('Nico_BlogBundle_homepage') }}">symblog</a>{% endblock %}</h1>
    <h3>{% block blog_tagline %}<a href="#">creating a blog in Symfony2</a>{% endblock %}</h3>
  </div>   

  <section class="main-col">
    {% block body %}{% endblock %}
  </section>


  <footer class="footer">
    <div class="container">
      {% block footer %}
      Symfony2 blog tutorial - created by <a href="https://github.com/dsyph3r">dsyph3r</a>
      {% endblock %}
    </div>
  </footer>

</section>

{% block javascripts %}{% endblock %}
</body>
</html>
